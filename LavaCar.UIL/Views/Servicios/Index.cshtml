@model IEnumerable<LavaCar.ETL.ServicioETL>

@{
    ViewData["Title"] = "Index";
}

<h1>Servicios</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdServicio">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdServicio">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdServicio">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
